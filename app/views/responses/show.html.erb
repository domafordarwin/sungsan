<div class="bg-white rounded-2xl shadow-lg p-8 text-center">
  <h1 class="text-xl font-bold text-gray-900 mb-2">봉사 배정 알림</h1>
  <p class="text-sm text-gray-500 mb-6"><%= @assignment.member.name %>님께</p>

  <div class="bg-gray-50 rounded-xl p-6 mb-6 text-left space-y-3">
    <div class="flex items-center gap-3">
      <span class="text-gray-400 w-6 text-center">&#x1f4c5;</span>
      <div>
        <div class="text-xs text-gray-500">날짜</div>
        <div class="font-medium"><%= @assignment.event.date.strftime("%Y년 %m월 %d일 (%A)") %></div>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <span class="text-gray-400 w-6 text-center">&#x23f0;</span>
      <div>
        <div class="text-xs text-gray-500">시간</div>
        <div class="font-medium"><%= @assignment.event.start_time.strftime("%H:%M") %></div>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <span class="text-gray-400 w-6 text-center">&#x26ea;</span>
      <div>
        <div class="text-xs text-gray-500">미사</div>
        <div class="font-medium"><%= @assignment.event.event_type.name %></div>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <span class="text-gray-400 w-6 text-center">&#x1f3ad;</span>
      <div>
        <div class="text-xs text-gray-500">역할</div>
        <div class="font-medium"><%= @assignment.role.name %></div>
      </div>
    </div>
  </div>

  <%= form_with url: response_path(@assignment.response_token), method: :patch, class: "space-y-4" do %>
    <div class="grid grid-cols-2 gap-3">
      <button type="submit" name="response" value="accept"
              class="bg-green-600 text-white py-3 px-4 rounded-xl font-medium hover:bg-green-700 transition">
        수락
      </button>
      <button type="submit" name="response" value="decline"
              class="bg-red-600 text-white py-3 px-4 rounded-xl font-medium hover:bg-red-700 transition"
              onclick="document.getElementById('decline-reason').classList.remove('hidden'); event.preventDefault();">
        거절
      </button>
    </div>

    <div id="decline-reason" class="hidden space-y-3">
      <textarea name="decline_reason" rows="2" placeholder="거절 사유 (선택)"
                class="w-full rounded-xl border-gray-300 shadow-sm text-sm"></textarea>
      <button type="submit" name="response" value="decline"
              class="w-full bg-red-600 text-white py-3 px-4 rounded-xl font-medium hover:bg-red-700 transition">
        거절 확인
      </button>
    </div>
  <% end %>

  <p class="text-xs text-gray-400 mt-4">
    응답 기한: <%= @assignment.response_token_expires_at.strftime("%m/%d %H:%M") %>까지
  </p>
</div>
