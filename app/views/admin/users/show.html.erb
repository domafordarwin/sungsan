<div class="max-w-2xl mx-auto bg-white rounded-lg shadow p-8">
  <h1 class="text-2xl font-bold mb-6"><%= @user.name %></h1>

  <dl class="space-y-4">
    <div>
      <dt class="text-sm text-gray-500">이메일</dt>
      <dd><%= @user.email_address %></dd>
    </div>
    <div>
      <dt class="text-sm text-gray-500">역할</dt>
      <dd><%= @user.role %></dd>
    </div>
    <div>
      <dt class="text-sm text-gray-500">생성일</dt>
      <dd><%= @user.created_at.strftime("%Y-%m-%d") %></dd>
    </div>
  </dl>

  <div class="mt-6 flex gap-4">
    <%= link_to "수정", edit_admin_user_path(@user), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= link_to "목록", admin_users_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>
