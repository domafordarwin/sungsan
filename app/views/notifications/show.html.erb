<div class="max-w-2xl mx-auto bg-white rounded-lg shadow p-8">
  <h1 class="text-2xl font-bold mb-4"><%= @notification.subject %></h1>

  <dl class="space-y-3 mb-6">
    <div><dt class="text-sm text-gray-500">유형</dt>
      <dd><%= case @notification.notification_type
              when 'assignment' then '배정 알림'
              when 'reminder' then '리마인더'
              when 'announcement' then '공지'
              end %></dd>
    </div>
    <div><dt class="text-sm text-gray-500">수신자</dt>
      <dd><%= @notification.recipient&.name || "전체" %></dd>
    </div>
    <div><dt class="text-sm text-gray-500">발송자</dt>
      <dd><%= @notification.sender&.name || "-" %></dd>
    </div>
    <div><dt class="text-sm text-gray-500">채널</dt>
      <dd><%= @notification.channel %></dd>
    </div>
    <div><dt class="text-sm text-gray-500">상태</dt>
      <dd><%= @notification.status %></dd>
    </div>
    <div><dt class="text-sm text-gray-500">발송일</dt>
      <dd><%= @notification.sent_at&.strftime("%Y-%m-%d %H:%M") || "-" %></dd>
    </div>
  </dl>

  <div class="bg-gray-50 rounded-lg p-4 mb-6">
    <p class="whitespace-pre-wrap"><%= @notification.body %></p>
  </div>

  <%= link_to "목록", notifications_path, class: "text-gray-600 hover:text-gray-900" %>
</div>
