<%= form_with(model: album, class: "card-basalt", style: "padding: 1.5rem;") do |f| %>
  <% if album.errors.any? %>
    <div class="alert-lava" style="padding: 0.75rem; border-radius: 0.375rem; margin-bottom: 1rem;">
      <p style="font-weight: 600; margin-bottom: 0.25rem;">입력 오류가 있습니다:</p>
      <% album.errors.full_messages.each do |msg| %>
        <p style="margin: 0; font-size: 0.85rem;">&bull; <%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div style="display: flex; flex-direction: column; gap: 1rem;">
    <div>
      <%= f.label :title, "앨범 제목", style: "display: block; font-weight: 600; margin-bottom: 0.375rem; color: var(--basalt-700);" %>
      <%= f.text_field :title, class: "input-basalt", placeholder: "예: 2026년 부활절 행사", style: "width: 100%;" %>
    </div>

    <div>
      <%= f.label :description, "설명", style: "display: block; font-weight: 600; margin-bottom: 0.375rem; color: var(--basalt-700);" %>
      <%= f.text_area :description, class: "input-basalt", rows: 3, placeholder: "앨범에 대한 간단한 설명 (선택)",
          style: "width: 100%; resize: vertical;" %>
    </div>

    <div>
      <%= f.label :event_date, "행사 날짜", style: "display: block; font-weight: 600; margin-bottom: 0.375rem; color: var(--basalt-700);" %>
      <%= f.date_field :event_date, class: "input-basalt", style: "width: 100%;" %>
    </div>

    <div style="display: flex; justify-content: flex-end; gap: 0.75rem; padding-top: 0.5rem;">
      <%= link_to "취소", photo_albums_path, class: "btn-basalt" %>
      <%= f.submit(album.persisted? ? "수정" : "만들기", class: "btn-ocean") %>
    </div>
  </div>
<% end %>
