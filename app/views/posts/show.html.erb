<div class="animate-in" style="margin-bottom: 1rem;">
  <%= link_to "&larr; 게시판".html_safe, posts_path, class: "link-ocean", style: "font-size: 0.875rem;" %>
</div>

<!-- 게시글 본문 -->
<div class="card-basalt animate-in animate-delay-1" style="padding: 1.5rem; margin-bottom: 1.5rem;">
  <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 1rem; flex-wrap: wrap; gap: 0.5rem;">
    <div>
      <% if @post.pinned? %>
        <span class="badge badge-sunrise" style="margin-bottom: 0.5rem;">&#128204; 고정글</span>
      <% end %>
      <h1 style="font-size: 1.5rem; font-weight: 700; color: var(--basalt-800); line-height: 1.4;">
        <%= @post.title %>
      </h1>
      <div style="font-size: 0.85rem; color: var(--basalt-400); margin-top: 0.5rem;">
        <span><%= @post.author.name %></span>
        &middot;
        <span><%= @post.created_at.strftime("%Y년 %m월 %d일 %H:%M") %></span>
      </div>
    </div>

    <% if policy(@post).update? || policy(@post).destroy? %>
      <div style="display: flex; gap: 0.5rem;">
        <% if policy(@post).update? %>
          <%= link_to "수정", edit_post_path(@post), class: "btn-basalt", style: "font-size: 0.85rem;" %>
        <% end %>
        <% if policy(@post).destroy? %>
          <%= button_to "삭제", post_path(@post), method: :delete,
              class: "btn-lava", style: "font-size: 0.85rem;",
              form: { data: { turbo_confirm: "이 게시글을 삭제하시겠습니까?" } } %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div style="padding: 1rem 0; border-top: 1px solid var(--basalt-100); line-height: 1.8; color: var(--basalt-700); white-space: pre-wrap; word-break: break-word;">
    <%= simple_format(@post.body) %>
  </div>
</div>

<!-- 댓글 섹션 -->
<div class="card-basalt animate-in animate-delay-2" style="padding: 1.5rem;">
  <h3 class="section-title">&#128172; 댓글 (<%= @post.comments_count || 0 %>)</h3>

  <% if @comments.any? %>
    <div style="display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 1.5rem;">
      <% @comments.each do |comment| %>
        <div style="padding: 0.75rem; background: var(--basalt-50); border-radius: 0.5rem;">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.375rem;">
            <span style="font-size: 0.85rem; font-weight: 600; color: var(--basalt-700);">
              <%= comment.author.name %>
            </span>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
              <span style="font-size: 0.75rem; color: var(--basalt-400);">
                <%= comment.created_at.strftime("%Y.%m.%d %H:%M") %>
              </span>
              <% if policy(comment).destroy? %>
                <%= button_to "삭제", post_comment_path(@post, comment), method: :delete,
                    style: "font-size: 0.7rem; color: var(--lava-600); background: none; border: none; cursor: pointer; padding: 0;",
                    form: { data: { turbo_confirm: "이 댓글을 삭제하시겠습니까?" } } %>
              <% end %>
            </div>
          </div>
          <p style="font-size: 0.9rem; color: var(--basalt-600); line-height: 1.5; margin: 0; white-space: pre-wrap; word-break: break-word;">
            <%= comment.body %>
          </p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p style="color: var(--basalt-400); font-size: 0.875rem; margin-bottom: 1.5rem;">아직 댓글이 없습니다.</p>
  <% end %>

  <!-- 댓글 작성 폼 -->
  <% if policy(Comment).create? %>
    <%= form_with(model: [@post, @comment], style: "display: flex; flex-direction: column; gap: 0.75rem;") do |f| %>
      <% if @comment&.errors&.any? %>
        <div class="alert-lava" style="padding: 0.75rem; border-radius: 0.375rem;">
          <% @comment.errors.full_messages.each do |msg| %>
            <p style="margin: 0; font-size: 0.85rem;"><%= msg %></p>
          <% end %>
        </div>
      <% end %>

      <%= f.text_area :body, class: "input-basalt", rows: 3, placeholder: "댓글을 입력하세요...",
          style: "resize: vertical;" %>

      <div style="text-align: right;">
        <%= f.submit "댓글 작성", class: "btn-ocean", style: "font-size: 0.85rem;" %>
      </div>
    <% end %>
  <% end %>
</div>
